<div class="row">
  <div class="span3">
    <table class="table table-bordered table-striped">
      <tbody>
      <tr>
        <td id="green-title" class="span2">Green</td>
        <td id="green-sum" class="span1"></td>
      </tr>
      <tr>
        <td id="yellow-title">Yellow</td>
        <td id="yellow-sum"></td>
      </tr>
      <tr>
        <td id="red-title">Red</td>
        <td id="red-sum"></td>
      </tr>
      <tr>
        <td id="none-title">None</td>
        <td id="none-sum" ></td>
