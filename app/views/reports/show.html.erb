  </div>
  <div class="span3">
    <table class="table table-bordered table-striped">
      <tbody>
      <tr>
        <td class="span2">Revenue</td>
        <td class="span1"><%= @report.revenue %></td>
      </tr>
      <tr>
        <td >Expense</td>
        <td ><%= @report.expense %></td>
      </tr>
